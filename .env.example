# Adaptive Mechanism Agent 环境配置模板
# 复制此文件为 .env 并填入实际值

# ===== LLM配置 =====
# OpenAI API密钥（必需）
OPENAI_API_KEY=your_openai_api_key_here

# 可选：其他LLM提供商
# ANTHROPIC_API_KEY=your_anthropic_api_key
# COHERE_API_KEY=your_cohere_api_key

# ===== 环境设置 =====
# 运行环境: development, test, production
ENVIRONMENT=development

# 日志级别: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=DEBUG

# ===== 数据库配置 =====
# PostgreSQL数据库配置（如果使用外部数据库）
DB_HOST=localhost
DB_PORT=5432
DB_NAME=adpt_mech_agent
DB_USER=postgres
DB_PASSWORD=password

# ===== 向量数据库配置 =====
# Qdrant配置（生产环境推荐）
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your_qdrant_api_key

# Chroma配置（开发环境默认）
CHROMA_PERSIST_DIR=./data/vector_stores/chroma

# ===== 缓存配置 =====
# Redis配置（可选，用于分布式缓存）
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ===== 嵌入模型配置 =====
# 本地嵌入模型路径（如果使用本地模型）
LOCAL_EMBEDDER_MODEL_PATH=./models/bge-small-en-v1.5

# OpenAI嵌入模型（如果使用OpenAI）
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# ===== 性能配置 =====
# 最大并发数
MAX_WORKERS=10

# 请求超时时间（秒）
REQUEST_TIMEOUT=30

# ===== 安全配置 =====
# API密钥（如果启用API认证）
API_SECRET_KEY=your_api_secret_key

# CORS配置
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===== 监控配置 =====
# Prometheus指标（如果启用监控）
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# ===== 邮件配置（用于通知） =====
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ===== 高级配置 =====
# 知识库构建配置
KNOWLEDGE_BASE_PATH=./data/knowledge
PROCESSED_DOCS_PATH=./data/knowledge/processed

# 检索配置
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7
RERANK_ENABLED=true

# Agent配置
DEFAULT_AGENT_TYPE=simple_agent
MAX_ITERATIONS=10
AGENT_TIMEOUT=30